<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FormulaInfo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorAccent">@color/colorAccent</item>

        <item name="cardBackgroundColor">@color/light_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="android:spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
    </style>

    <style name="TextViewSpinnerDropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>

        <item name="android:background">@color/light_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:width">90dp</item>
        <item name="android:textAlignment">center</item>

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Theme.FormulaInfo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FormulaInfo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FormulaInfo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>